{% extends 'base.html.twig' %}

{% block body %}
<div id="wrapper" >
    {% include(':utilities:navigation.html.twig') %}
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                <div class="form-group">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}

                    <div class="form-group">
                        {{ form_label(form.jobType) }}
                        {{ form_errors(form.jobType) }}
                        {{ form_widget(form.jobType, {'attr': {'class': 'form-control'}}) }}
                    </div>


                    <div class="form-group">
                        {{ form_label(form.vendor) }}
                        {{ form_errors(form.vendor) }}
                        {{ form_widget(form.vendor,  {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.contact) }}
                        {{ form_errors(form.contact) }}
                        {{ form_widget(form.contact, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.phonenumber) }}
                        {{ form_errors(form.phonenumber) }}
                        {{ form_widget(form.phonenumber, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.email) }}
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div>
                        {{ form_widget(form.save) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
                {#</div>#}
            </div>
        </div>
        <!-- /#container -->
    </div>
    <!-- /#page-wrapper -->
</div>
<!-- /#wrapper -->

{% endblock %}